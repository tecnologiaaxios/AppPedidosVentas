<?xml version='1.0' encoding='utf-8'?>
<widget id="pedidos.xico" version="1.0.6" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Pedidos Xico</name>
    <description>
        Aplicaci√≥n para realizar pedidos
    </description>
    <icon density="mdpi" height="57" platform="ios" src="res/icon/android/icon.png" width="57" />
    <platform name="android">
        <icon density="ldpi" src="res/icon/android/ldpi.png" />
        <icon density="mdpi" src="res/icon/android/mdpi.png" />
        <icon density="hdpi" src="res/icon/android/hdpi.png" />
        <icon density="xhdpi" src="res/icon/android/xhdpi.png" />
        <icon density="xxhdpi" src="res/icon/android/xxhdpi.png" />
        <icon density="xxxhdpi" src="res/icon/android/xxxhdpi.png" />
        <splash density="land-hdpi" src="/platforms/android/res/drawable-land.hdpi/screen.png" />
        <splash density="land-ldpi" src="/platforms/android/res/drawable-land.ldpi/screen.png" />
        <splash density="land-mdpi" src="/platforms/android/res/drawable-land.mdpi/screen.png" />
        <splash density="land-xhdpi" src="/platforms/android/res/drawable-land.xhdpi/screen.png" />
        <splash density="port-hdpi" src="/platforms/android/res/drawable-port-hdpi/screen.png" />
        <splash density="port-ldpi" src="/platforms/android/res/drawable-port-ldpi/screen.png" />
        <splash density="port-mdpi" src="/platforms/android/res/drawable-port-mdpi/screen.png" />
        <splash density="port-xhdpi" src="/platforms/android/res/drawable-port-xhdpi/screen.png" />
    </platform>
    <author email="dev@cordova.apache.org" href="http://axiosagencidigital.com">
        Axios Agencia Digital
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="fullscreen" value="false" />
    <preference name="orientation" value="portrait" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="6000" />
    <preference name="Orientation" value="sensorPortrait" />
    <preference name="FadeSplashScreenDuration" value="100" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <engine name="ios" spec="^4.4.0" />
    <plugin name="cordova-plugin-camera" spec="^2.4.1" />
    <plugin name="cordova-plugin-file" spec="^4.3.3" />
    <plugin name="cordova-plugin-splashscreen" spec="^4.0.3" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
</widget>
